<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/acc_page1_item_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/acc_page1_item_text2"
            android:layout_width="0dp" android:layout_weight="0.25"
            android:layout_height="wrap_content" android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/acc_page1_item_text3"
            android:layout_width="0dp" android:layout_weight="0.25"
            android:layout_height="wrap_content" android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/acc_page1_item_text4"
            android:layout_width="0dp" android:layout_weight="0.25"
            android:layout_height="wrap_content" android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/acc_page1_item_text5"
            android:layout_width="0dp" android:layout_weight="0.25"
            android:layout_height="wrap_content" android:gravity="center"
            android:textSize="18sp" android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>