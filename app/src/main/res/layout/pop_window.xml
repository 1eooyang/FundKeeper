<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="#96002a9f">
    <Button
        android:id="@+id/pop_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯" android:textSize="18sp" android:textColor="#ffffff"
        android:background="#00ffffff"/>
    <TextView
        android:layout_width="2dp" android:layout_height="wrap_content"
        android:background="#4d323de2" android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/pop_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刪除" android:textSize="18sp" android:textColor="#ffffff"
        android:background="#00ffffff"/>
    <TextView
        android:layout_width="2dp" android:layout_height="wrap_content"
        android:background="#4d303da1"/>
    <Button
        android:id="@+id/pop_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消" android:textSize="18sp" android:textColor="#ffffff"
        android:background="#00ffffff"/>

</LinearLayout>