<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/dialog_item_iv"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/country_twd"/>

        <TextView
            android:id="@+id/dialog_item_txt1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="TWD"
            android:textSize="30sp" android:paddingLeft="10dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/dialog_item_txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="700000" android:textSize="30sp"
            android:paddingRight="10dp"
            android:gravity="end|center_vertical"/>
</LinearLayout>