<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="180dp" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="180dp" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp" android:gravity="center"
            android:text="名稱"   android:visibility="visible"
            android:paddingTop="14dp" android:paddingBottom="14dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView android:id="@+id/tx1"
            android:layout_width="180dp" android:layout_height="wrap_content" android:padding="5dp"
            android:text="施羅德環球基金系列-歐元政府債券A1類股份-累積單位(歐元)" android:textSize="18sp" android:gravity="center_vertical"
            android:visibility="gone" android:maxLines="3"/>
        <TextView android:id="@+id/tx2" android:layout_below="@id/tx1"
            android:layout_width="180dp" android:layout_height="wrap_content" android:gravity="bottom"
            android:text="11-25" android:textSize="14sp" android:layout_marginTop="5dp" android:paddingLeft="5dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:layout_width="2dp" android:layout_height="match_parent"
        android:background="#4d000000" android:layout_alignParentRight="true"/>

    <com.jonli.fundkeeper.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
         >

        <com.jonli.fundkeeper.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="1月\n(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="3月\n(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="6月\n(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="今年以來(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="一年\n(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="三年\n(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="80dp" android:layout_height="match_parent"
                    android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:text="五年\n(%)" android:gravity="center" android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.jonli.fundkeeper.MyHScrollView>
    </com.jonli.fundkeeper.InterceptScrollContainer>

</LinearLayout>