<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="-----基金分類-----"
            android:textColor="#342b7e" android:paddingTop="10dp"
            android:textSize="26sp" android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="國內/境外基金"
            style="@style/spinnerTxt" />

        <Spinner
            android:id="@+id/adv_sp1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/spinner_style">
        </Spinner>

        <TextView
            android:id="@+id/adv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金類型"
            style="@style/spinnerTxt" />

        <Spinner
            android:id="@+id/adv_sp2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/spinner_style">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投資地區"
            style="@style/spinnerTxt" />
        <Spinner
            android:id="@+id/adv_sp3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/spinner_style">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="計價幣別"
            style="@style/spinnerTxt" />

        <Spinner
            android:id="@+id/adv_sp4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/spinner_style">
        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="-----基金風險-----"
            android:textColor="#342b7e" android:paddingTop="10dp"
            android:textSize="26sp" android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sharpe值"
            style="@style/spinnerTxt" />

        <Spinner
            android:id="@+id/adv_sp5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/spinner_style">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bata係數"
            style="@style/spinnerTxt" />

        <Spinner
            android:id="@+id/adv_sp6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/spinner_style">
        </Spinner>

        <Button
            android:id="@+id/btn_searchadvanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="確定"
            />
    </LinearLayout>

</ScrollView>