<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/acc_list"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="10sp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" android:layout_gravity="center_vertical"
            android:text="+ 收入" android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" android:layout_gravity="center_vertical"
            android:text="+ 支出" android:textSize="24sp"/>
        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" android:layout_gravity="center_vertical"
            android:text="+ 轉帳" android:textSize="24sp"/>
    </LinearLayout>

</LinearLayout>